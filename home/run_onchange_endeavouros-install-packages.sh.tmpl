{{ if eq .chezmoi.os "linux" -}}
{{ if or (eq .chezmoi.osRelease.id "endeavouros") (eq .chezmoi.osRelease.idLike "arch") -}}
#!/bin/bash

set -eufo pipefail

echo "Installing packages for EndeavourOS with yay..."

# Install all packages with yay (both official and AUR)
{{ if .packages.endeavouros.yay -}}
echo "Installing packages..."
yay -S --needed --noconfirm {{ range .packages.endeavouros.yay }}{{ . }} {{ end }}
{{ end -}}

echo "Package installation complete!"
{{ end -}}
{{ end -}}